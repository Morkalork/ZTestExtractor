@model ZTestExtractor.MVC.Models.Configurations.ConfigurationsViewModel

@section scripts{
    <script type="text/javascript" src="~/Scripts/Pages/Home/ConfigurationForm.js"></script>
}

<h2>Configure</h2>

<article id="configuration_form">
    <header>
        <h3>Jira database settings</h3>
        <p>These are the settings used to connect ZTest Extractor with your Jira instance</p>
    </header>
    <section>
        <p class="title">Server</p>
        <p><input type="text" id="server_name" value="@Model.DatabaseConfigurationModel.ServerName" placeholder="The name of your database server" $ /></p>
    </section>
    <section>
        <p class="title">Database</p>
        <p><input type="text" id="database_name" value="@Model.DatabaseConfigurationModel.DatabaseName" placeholder="The name of your database" /></p>
    </section>
    <section>
        <p class="title">Username</p>
        <p><input type="text" id="username" value="@Model.DatabaseConfigurationModel.Username" placeholder="Your database username" /></p>
    </section>
    <section>
        <p class="title">Password</p>
        <p><input type="password" id="password" value="@Model.DatabaseConfigurationModel.Password" placeholder="Your very secret Jira password" /></p>
    </section>
    <section>
        <p class="title">Database type</p>
        <p>
            <select id="database_type">
                @foreach(var system in Model.DatabaseSystems)
                {
                    <option value="@system.ToString()" @((Model.DatabaseConfigurationModel.DatabaseSystem == system) ? "selected" : "")>@system.ToString()</option>
                }
            </select>
        </p>
    </section>
    <section>
        <p><button id="save_database_settings">Save settings</button></p>
    </section>
</article>